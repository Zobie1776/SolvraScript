name: CI

on:
  push:
    branches: [main]
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: pnpm/action-setup@v3
        with:
          version: 8
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: 'pnpm'
      - uses: actions-rs/toolchain@v1
        with:
          toolchain: stable
          targets: x86_64-unknown-linux-gnu,aarch64-unknown-linux-gnu
          components: clippy
      - name: Install dependencies
        run: pnpm install
      - name: Clippy
        run: cargo clippy --workspace --all-targets -- -D warnings
      - name: Cargo tests
        run: cargo test --all
      - name: nova_core tests (armv7 backend)
        run: cargo test -p nova_core --no-default-features --features backend-armv7
      - name: nova_core tests (aarch64 backend)
        run: cargo test -p nova_core --no-default-features --features backend-aarch64
      - name: Build runtime tool (x86_64)
        run: cargo build -p nova_core --bin nova-runtime --target x86_64-unknown-linux-gnu
      - name: Build runtime tool (aarch64)
        run: cargo build -p nova_core --bin nova-runtime --no-default-features --features backend-aarch64 --target aarch64-unknown-linux-gnu
      - name: Lint
        run: pnpm lint
      - name: Typecheck
        run: pnpm typecheck
      - name: Front-end tests
        run: pnpm test
