import <vector>;

//=============================================
// Section 1.0 — Metric Builder
//=============================================
fn build_metric(name, duration_ms) {
    let mut metric = vector.make();
    metric = vector.append(metric, name);
    metric = vector.append(metric, duration_ms);
    return metric;
}

fn format_metric(metric) {
    let name = metric[0];
    let duration = metric[1];
    return "{" + name + ":" + to_string(duration) + "}";
}

