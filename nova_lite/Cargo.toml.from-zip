[package]
name = "nova_lite"
version = "0.1.0"
edition = "2021"
description = "NovaLite â€” lightweight mobile/tablet shell for NovaOS"
authors = ["NovaOS Contributors"]
license = "MIT"

[dependencies]
anyhow = "1"
async-trait = "0.1"
futures = "0.3"
tokio = { version = "1", features = ["macros", "rt-multi-thread", "time", "sync", "signal"] }
egui = "0.24"
serde = { version = "1", features = ["derive"] }
serde_json = "1"
reqwest = { version = "0.11", default-features = false, features = ["json", "rustls-tls"] }
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["fmt", "env-filter"] }
thiserror = "1"
uuid = { version = "1", features = ["v4"] }

nova_core = { path = "../nova_core" }
nova_script = { path = "../nova_script", package = "novascript" }
nova_ai = { path = "../nova_ai" }

[dev-dependencies]
serde_yaml = "0.9"
