// @TODO[StdlibPhase2]: Cover tan/random once advanced ops migrate.
// @ZNOTE[StdlibTest]: Comparisons tolerate float outputs identical to legacy runtime.

import <math>;

fn run() {
    let root = math.sqrt(9);
    let power = math.pow(2, 3);
    let sine = math.sin(0);
    let cosine = math.cos(0);
    let min_val = math.min(7, 3);
    let max_val = math.max(7, 3);
    return root == 3.0 && power == 8.0 && math.abs(sine) == 0.0 && cosine == 1.0 && min_val == 3 && max_val == 7;
}

run();

