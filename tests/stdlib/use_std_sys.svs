// Goal: Exercise <sys> stdlib bridge for boolean/type/env helpers
// Objective: Confirm sys::<fn> wrappers forward to legacy builtins correctly
//==================================================

import <sys>;

const KEY = "SOLVRA_STD_SYS_TEST";

fn main() {
    sys.env_set(KEY, "bridge");
    let env_ok = sys.env_get(KEY) == "bridge";

    let bool_ok = sys.bool(0) == false && sys.bool(1) == true;
    let type_ok = sys.type(env_ok) == "bool";

    return env_ok && bool_ok && type_ok;
}

main();

