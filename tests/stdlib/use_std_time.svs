import <time>;

fn main() {
    let seconds = time.time();
    if seconds <= 0.0 {
        return false;
    }

    let snapshot = time.now();
    if type(snapshot) != "object" {
        return false;
    }

    // Sleep for zero milliseconds to ensure call path is wired.
    time.sleep(0);
    return true;
}

main();

